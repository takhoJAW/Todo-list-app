<main>
      <div class="box">


       <h1 class="h1W">
            Work List:
        </h1>
     </div>
     
     <div class="item">
    <ul id="task-Wlist">
          <% workTasks.forEach((kar, index)=> { %>
            <li>
              <input type="checkbox", class="checkbox", data-index="<%= index%>" <% if(kar.completed) { %>checked<% }%>>
              <span class="task-item <%=kar.completed ? 'completed' : ''%>" ><%=kar.name%></span>
            
            </li>
          <% }) %>
        </ul>

        <form action="/addW" method="post" id="task-Wform">
             <input type="text" name="newTask" placeholder="New Task" required>
             <button type="submit">Add</button>    
         </form>
          </div>

          <script>
            function formBorders() {
            const taskWList = document.getElementById('task-Wlist');
            const formWList = document.getElementById('task-Wform');
            if (taskWList.children.length === 0) {
            formWList.classList.add('yesBorder');
           }
           else {
           formWList.classList.remove('yesBorder');
           }}
            document.addEventListener('DOMContentLoaded', formBorders);

            document.querySelectorAll('.checkbox').forEach((checkbox)=> {
              checkbox.addEventListener('change', function() {
                const karClass = this.nextElementSibling;
                karClass.classList.toggle('completed', this.checked);
              })
            })
            formBorders();
                //completed status updating
                const karIndex = this.getAttribute('data-index');
                tasks[karIndex].completed = this.checked;
                
          </script>
    
